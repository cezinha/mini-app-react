{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
  },
  "include": [
    "src",
    "custom.d.ts"
  ],
  "typeRoots": [
    "../node_modules/@types",
    "./@types"
  ]
}
